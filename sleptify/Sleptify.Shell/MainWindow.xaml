<Window x:Class="Sleptify.Shell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Sleptify"
        Width="420" Height="690"
        WindowStyle="None" ResizeMode="NoResize"
        Background="Transparent" AllowsTransparency="True">
    <Border CornerRadius="20" BorderThickness="1" BorderBrush="#25A3B8D8" Background="#CCF3F8FF">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="44"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="44"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="8,6,8,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Sleptify" FontWeight="SemiBold" Foreground="#275F7A" FontSize="16"/>
                    <TextBlock Text="  ·  spotify" Foreground="#5E8CA3" FontSize="12" Margin="6,2,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="ConnectBtn" Content="Connect Spotify" Padding="10,6" FontSize="12"
                            Background="#E6FFFFFF" BorderBrush="#99A4D7E0" Foreground="#2F6E8A"
                            Click="ConnectBtn_Click" Cursor="Hand" Margin="0,0,8,0"/>
                    <Button Content="×" Width="28" Height="28" Click="Close_Click"
                            Background="#E6FFFFFF" BorderBrush="#99A4D7E0" Foreground="#5A7F91"
                            FontSize="14" FontWeight="Bold" Cursor="Hand"/>
                </StackPanel>
            </Grid>

            <Border Grid.Row="1" Margin="12" CornerRadius="16" Background="#22FFFFFF" BorderBrush="#25A3B8D8" BorderThickness="1">
                <wv2:WebView2 x:Name="Web" />
            </Border>

            <Grid Grid.Row="2" Margin="12,0,12,12">
                <TextBlock Text="Blue pastel · blur mica · Premium playback"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="#6A9BB0" FontSize="11"/>
            </Grid>
        </Grid>
    </Border>
</Window>
